<!-- Required meta tags -->

<div class = "results">
  <body background ="/static/good.jpg" class="img-fluid" alt="Responsive image">
<h1 id = list>Restaurant List</h1>

  {{#each results}}
  <h1>{{id}}</h1>
<h1>{{name}}</h1>
<p>Address: {{address}}</p>
<p>Category: {{category}}</p>
<h2>Write Your Own Review</h2>
<form action="/submit_review/{{id}}" method="POST">
  {{/each}}
  <label>Title: </label><br>
  <input type="text" name="title"><br>
  <label>Stars:</label>
  <select name="stars">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select><br>
  <label>Contents:</label><br>
  <textarea name="review" cols="40" rows="6"></textarea><br>
  <button type="submit">Submit</button>
</form>
</body>
</div>
